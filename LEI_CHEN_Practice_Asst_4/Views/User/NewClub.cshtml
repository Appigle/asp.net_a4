@model Asst4.Models.BridgeClub

@{
  ViewData["Title"] = "Create New Club";
}

<h1>Create New Club</h1>

<div class="row">
  <div class="col-md-6">
    <form asp-action="CreateClub" method="post">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="form-group mb-3">
        <label asp-for="ClubName" class="control-label"></label>
        <input asp-for="ClubName" class="form-control" />
        <span asp-validation-for="ClubName" class="text-danger"></span>
      </div>

      <div class="form-group mb-3">
        <label asp-for="CityName" class="control-label"></label>
        <select asp-for="CityName" class="form-control" asp-items="@(new SelectList(ViewBag.Cities, "Name", "Name"))">
          <option value="">Select a City</option>
        </select>
        <span asp-validation-for="CityName" class="text-danger"></span>
      </div>

      <div class="form-group">
        <input type="submit" value="Create Club" class="btn btn-primary" />
        <a asp-action="ClubIndex" class="btn btn-secondary">Back to List</a>
      </div>
    </form>
  </div>
</div>

@section Scripts {
  @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
  }
}